<Window x:Class="RandomHelloGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomHelloGenerator"
        mc:Ignorable="d"
        Title="RandomHelloGenerator" Height="180" Width="250">

    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>

    <Border Padding="10">

        <StackPanel>

            <TextBlock Text="Random Hello Message Generator" FontWeight="Bold" Margin="0 10" TextAlignment="Center" />

            <TextBox Text="{Binding Name}" MaxLength="10" />

            <TextBlock Text="{Binding Result}" Height="25" Margin="0 10 0 0" Background="BlanchedAlmond"></TextBlock>

            <Button Content="Generate Message" HorizontalAlignment="Center" Width="150" Margin="0 10 0 0" x:Name="GenerateMessage" Command="{Binding GenerageMessageCommand}" />
            
        </StackPanel>

    </Border>
</Window>
